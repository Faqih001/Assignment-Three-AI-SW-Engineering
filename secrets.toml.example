# Streamlit secrets template for deployment
# Copy this file and rename it to 'secrets.toml'
# Replace the placeholder values with your actual credentials
# Upload to Streamlit Cloud in the "Secrets" section

[azure_ai]
AZURE_INFERENCE_SDK_ENDPOINT = "https://yourservice.services.ai.azure.com/models"
DEPLOYMENT_NAME = "your-model-deployment-name"
AZURE_INFERENCE_SDK_KEY = "your-azure-ai-key-here"

[app_config]
APP_NAME = "Fitness Nutrition AI Assistant"
DEBUG = false

# Optional: Add other service configurations as needed
# [database]
# CONNECTION_STRING = "your-database-connection-string"

# [external_apis]
# NUTRITION_API_KEY = "your-nutrition-api-key"
# RECIPE_API_KEY = "your-recipe-api-key"
